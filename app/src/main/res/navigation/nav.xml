<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.recyclerview.FragmentHome"
        android:label="FragmentHome"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragmentHome_to_fragmentRecycler"
            app:destination="@id/fragmentRecycler" />
    </fragment>
    <fragment
        android:id="@+id/fragmentRecycler"
        android:name="com.example.recyclerview.FragmentRecycler"
        android:label="FragmentRecycler"
        tools:layout="@layout/fragment_recycler"/>
</navigation>